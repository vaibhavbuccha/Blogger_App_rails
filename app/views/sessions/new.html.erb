<div class="row">
	<div class="col-md-6 col-md-offset-3 well">
		<h4 class="text-center">Login</h4>
		<hr>
		<%= form_tag '/login' do %>
			<div class="form-group">
				<%= label_tag :email %>
				<%= email_field_tag(:email,nil,class: "form-control",:required => true , :value => cookies[:email] ?  cookies[:email] : ''  ) %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<%= password_field_tag(:password,nil,class: "form-control",:required => true,:value => cookies[:password] ?  cookies[:password] : '') %>
			</div>
			<div>
				<%= label_tag :Remember_Me %>
				<%= check_box_tag :remember_me,1,params[:remember_me],cookies[:email] ? {checked: true} : {checked: false} %>
			</div>
			<hr>
			<%= submit_tag("login", class: "btn btn-success") %>
		<%end%>
	</div>
</div>
