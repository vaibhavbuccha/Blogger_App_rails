
<div class="row">
	<div class="col-md-6 col-md-offset-3 well">
		<h4 class="text-center" >Sign Up</h4>
		<hr>
		<%= form_for(@user, :url => {:controller=>'users' ,:action=>'create'},:method =>"post" ) do |f| %>
			<div class="form-group">
				<%= label_tag :name %>
				<%= f.text_field :name ,class: "form-control",:placeholder=>"Please enter name",:required => true %>
			</div>
			<div class="form-group">
				<%= label_tag :email %>
				<%= f.email_field :email ,class: "form-control",:placeholder=>"Please enter email",:required => true %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<%= f.password_field :password ,class: "form-control",:placeholder=>"Please enter password",:required => true %>
			</div>
			<div class="form-group" >
				<%= label_tag :image %>
				<%= f.file_field :image , class: "form-conmtrol"  %>
			</div>
			<hr>
			<%= f.submit "Sign up" ,class: "btn btn-success" %>
			<%end%>
	</div>
</div>
